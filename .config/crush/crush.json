{
  "$schema": "https://charm.land/crush.json",
  "lsp": {
    "typescript": {
      "command": "vtsls",
      "args": ["--stdio"]
    }
  },
  "mcp": {
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--allowed-hosts",
        "*",
        "--browser",
        "chrome"
      ],
      "disabled": false,
      "timeout": 150000
    }
  },
  "permissions": {
    "allowed_tools": ["view", "ls", "grep", "edit", "multiedit"]
  }
}
